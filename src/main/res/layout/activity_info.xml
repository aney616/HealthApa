<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.basha.healthapa.Activity.InfoActivity">
    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="match_parent"
            app:bootstrapBrand="primary"
            android:text="@string/tvv_2"
            android:layout_height="wrap_content" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            app:bootstrapBrand="success"
            app:bootstrapHeading="h6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/testText"
            android:text="Dummy Text"
            android:gravity="center"
            android:textStyle="bold" />


        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            app:bootstrapBrand="warning"
            android:text="@string/tv_4"
            android:layout_height="wrap_content" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            app:bootstrapBrand="success"
            app:bootstrapHeading="h6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/testTextDesease"
            android:text="Dummy Text"
            android:gravity="center"
            android:textStyle="bold" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            app:bootstrapBrand="danger"
            app:roundedCorners="true"
            android:id="@+id/seeDoctorBtn"
            android:textStyle="bold"
            android:onClick="onClickSeeDoctor"
            app:showOutline="false"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:text="ডাক্তার দেখান"/>
    </LinearLayout>

</LinearLayout>
