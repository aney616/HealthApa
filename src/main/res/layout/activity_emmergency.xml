<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_emmergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.basha.healthapa.Activity.EmmergencyActivity"
    android:weightSum="1">
    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:background="@drawable/emmergency"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal">

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@color/bootstrap_alert_cross_default">
    <TextView
        android:id="@+id/medicineBtn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="জরুরী ভিত্তিতে \n ঔষধের জন্য  \nযোগাযোগ \n করুন"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"/>
    </LinearLayout>


</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:background="@color/bootstrap_alert_cross_default"
            android:weightSum="1">
            <TextView
                android:id="@+id/bloodBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="জরুরী ভিত্তিতে \n রক্তের জন্য  \nযোগাযোগ\n করুন"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_weight="2" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <!--android:layout_width="match_parent"
        app:bootstrapBrand="regular"
        android:layout_marginTop="1dp"
        android:text="\nজরুরী নাম্বার সমূহ\n"
        android:layout_height="wrap_content" -->/>
</LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_margin="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_marginBottom="12dp"
            android:background="@color/bootstrap_alert_cross_default">
            <TextView
                android:id="@+id/ambulanceBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="জরুরী ভিত্তিতে \n এ্যাম্বুলেন্সের জন্য  যোগাযোগ করুন\n\n"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>